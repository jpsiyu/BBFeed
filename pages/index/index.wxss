/* pages/index/index.wxss */

.page-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list{
  position: fixed;
  margin-top: 5%;
  width: 95%;
  height: 75vh;
  background-color: white;
  box-shadow: 0 0 10rpx 10rpx whitesmoke;
}

.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  margin: 2px;
  width: 100%;
  height: 150rpx;
  box-shadow: 0 5rpx 5rpx 0 whitesmoke;
}


.item image{
  width: 150rpx;
  height: 150rpx;
}

.item text{
  color: gray;
}

.desc{
  position: fixed;
  top: 10vh;
  width: 100%;
  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.desc-a{
  flex: 2;
  width: 60%;
}

.desc-b{
  flex: 4;
}

.desc-b image{
  width: 400rpx;
  height: 400rpx;
}

.block-btns{
  background-color: lightgray;
  color: black;
  position: fixed;
  bottom: 0;
  width: 98%;
  height: 20vh;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  border-radius: 5rpx;
}

.btn-container{
  width: 23%;
  height: 50%;
  box-sizing: border-box;
}

.btn{
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  border: 1px white solid;
  box-sizing: border-box;
}

.btn image{
  width: 100%;
  height: 100%;

}