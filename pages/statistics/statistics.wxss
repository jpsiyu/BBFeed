/* pages/statistics/statistics.wxss */

.statistics{
    display: flex;
    flex-direction: column;
    height: 100vh;
    box-sizing: border-box;
    background-color: lightgray;
}

.record{
    padding-top: 20rpx;
    flex: 2;
    display: grid;
    grid-template-columns: repeat(2, 350rpx);
    grid-template-rows: repeat(2, 350rpx);
    justify-content: center;
    grid-gap: 1px;
}

.record-item{
    background-color: white;
    color: lightgray;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
}

.item-container{
    height: 150rpx;
    width: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
}

.record-item image{
    width: 150rpx;
    height: 150rpx;
}

.date{
    font-size: 2.5rem;
}

.small{
    font-size: 0.5rem;
}

.empty{
    flex: 1;
}

.support{
    width: 95%;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    border-radius: 10rpx;
    box-sizing: border-box;
    margin-bottom: 5rpx;
    align-self: center;
    color: white;
}

.support-item{
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    border-top: 1px white solid;
}

.support image{
    width: 100rpx;
    height: 100rpx;
    animation-name: cat;
    animation-duration: 2s;
    animation-iteration-count: infinite;
}

@keyframes cat{
    0% {transform: rotateZ(0);}
    50% {transform: rotateZ(45deg);}
}